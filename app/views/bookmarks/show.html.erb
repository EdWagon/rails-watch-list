<div class="container mt-5">
  <h1 class="mb-4"><%= @list.name %></h1>

  <h2 class="mb-3">Bookmarks</h2>

  <ul class="list-group mb-4">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= bookmark.movie.title %></strong> - <%= bookmark.comment %>
        </div>
        <%= link_to "Delete", list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
      </li>
    <% end %>
  </ul>

  <div>
    <%= link_to "Add a Bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
    <%= link_to "Back to Lists", lists_path, class: 'btn btn-secondary' %>
  </div>
</div>
