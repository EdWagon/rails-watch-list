<div class="container mt-5">
  <h1 class="mb-4">Add a Bookmark to <%= @list.name %></h1>

  <%= form_with model: [@list, @bookmark], local: true, html: { class: 'needs-validation', novalidate: true } do |form| %>
    <div class="mb-3">
      <%= form.label :movie_id, "Select a Movie", class: 'form-label' %>
      <%= form.collection_select :movie_id, Movie.all, :id, :title, { prompt: true }, { class: 'form-select', required: true } %>
      <div class="invalid-feedback">
        Please select a movie.
      </div>
    </div>

    <div class="mb-3">
      <%= form.label :comment, class: 'form-label' %>
      <%= form.text_area :comment, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        Please provide a comment.
      </div>
    </div>

    <div class="mb-3">
      <%= form.submit "Add Bookmark", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to "Back to List", list_path(@list), class: 'btn btn-secondary' %>
</div>
