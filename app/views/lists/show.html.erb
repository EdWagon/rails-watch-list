<div class="container mt-5">
  <h1 class="mb-4"><%= @list.name %></h1>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <%= image_tag(bookmark.movie.poster_url, alt: "movie poster image", class: "card-img-top") %>
          <div class="card-body">
            <h2 class="card-title"><%= bookmark.movie.title %></h2>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <%= button_to "Remove Movie", bookmark_path(bookmark), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
    <%= button_to 'Delete', list_path(@list), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  </div>
</div>
