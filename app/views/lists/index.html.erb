<div class="container mt-5">
  <h1 class="mb-4">Lists</h1>

  <%= link_to 'New List', new_list_path, class: 'btn btn-primary mb-3' %>

  <ul class="list-group">
    <% @lists.each do |list| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to list.name, list, class: 'text-decoration-none' %>
        <%= button_to 'Delete', list, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
      </li>
    <% end %>
  </ul>
</div>
